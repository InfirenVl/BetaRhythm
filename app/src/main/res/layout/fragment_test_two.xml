<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_test_q2"
    tools:context=".TestFragmentTwo">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="60dp">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/answer_background"
                        android:button="@color/accent"
                        android:drawableLeft="@drawable/radio"
                        android:drawablePadding="10dp"
                        android:onClick="onRadioButtonClicked"
                        android:padding="16dp"
                        android:text="Всегда мечтал стать известным ученым и открыть что-то новое "
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/answer_background"
                        android:button="@color/accent"
                        android:drawableLeft="@drawable/radio"
                        android:drawablePadding="10dp"
                        android:padding="16dp"
                        android:text="Открыл бы своё дело и стал бы бизнесменом"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/answer_background"
                        android:button="@color/accent"
                        android:drawableLeft="@drawable/radio"
                        android:drawablePadding="10dp"
                        android:padding="16dp"
                        android:text="Хочу создавать произведения искусства, чтобы на мои работы смотрели в Эрмитаже"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/answer_background"
                        android:button="@color/accent"
                        android:drawableLeft="@drawable/radio"
                        android:drawablePadding="10dp"
                        android:padding="16dp"
                        android:text="Если бы у меня такая была возможность, то я бы ходил по тусовкам и общался с
людьми"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RadioGroup>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_next"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_solid"
                    android:text="Далее"
                    android:onClick="next3"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="16sp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>